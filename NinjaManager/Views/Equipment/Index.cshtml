@model IEnumerable<EquipmentModel>

@{
    ViewData["Title"] = "View Ninjas";
}

<h1>All Ninjas (@Model.Count())</h1>

<div>
    <a asp-action="Create" asp-controller="Ninja" class="btn btn-success mb-3">Create New Ninja</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gold Value</th>
            <th>Strength</th>
            <th>Intelligence</th>
            <th>Agility</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && !Model.Any())
        {
            <tr>
                <td colspan="5">No equipment found..</td>
            </tr>
        }
        else
        {
            foreach (var equipment in Model)
            {
                <tr>
                    <td>@equipment.EquipmentId</td>
                    <td>@equipment.Name</td>
                    <td>@equipment.GoldValue</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Equipment" asp-route-id="@equipment.EquipmentId" class="btn btn-primary">Edit</a>

                        <form asp-action="Delete" asp-controller="Equipment" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@equipment.EquipmentId" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete @equipment.Name?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>