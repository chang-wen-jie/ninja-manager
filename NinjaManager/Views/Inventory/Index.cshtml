@model NinjaModel

@{
    ViewData["Title"] = "Manage Inventory";
}

<h1>@Model.Name's Inventory</h1>
<h1>Gold: @Model.Gold</h1>

<h4>Strength: @Model.TotalStrength</h4>
<h4>Intelligence: @Model.TotalIntelligence</h4>
<h4>Agility: @Model.TotalAgility</h4>
<h4>Gear Value: @Model.TotalGearValue</h4>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gold Value</th>
            <th>Category</th>
            <th>Strength</th>
            <th>Intelligence</th>
            <th>Agility</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Inventory != null && !Model.Inventory.Any())
        {
            <tr>
                <td colspan="6">No equipment found.</td>
            </tr>
        } else
        {
            foreach (var item in Model.Inventory)
            {
                var equipment = item.Equipment;
                if (equipment == null) continue;

                <tr>
                    <td>@equipment.Name</td>
                    <td>@equipment.GoldValue</td>
                    <td>@equipment.Category</td>
                    <td>@equipment.Strength</td>
                    <td>@equipment.Intelligence</td>
                    <td>@equipment.Agility</td>
                    <td>
                        <form asp-action="Remove" asp-controller="Inventory" method="post" style="display:inline">
                            <input type="hidden" name="ninjaId" value="@Model.NinjaId" />
                            <input type="hidden" name="equipmentId" value="@equipment.EquipmentId" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove @equipment.Name?')">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Buy" asp-controller="Inventory" asp-route-ninjaId="@Model.NinjaId" class="btn btn-success">Buy Equipment</a>
</div>
