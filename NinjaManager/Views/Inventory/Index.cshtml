@model NinjaModel

@{
    ViewData["Title"] = "Manage Inventory";
    var categories = Enum.GetValues(typeof(EquipmentCategory)).Cast<EquipmentCategory>().ToList();
}

<h1>@Model.Name's Inventory</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Gold</th>
            <th>Strength</th>
            <th>Intelligence</th>
            <th>Agility</th>
            <th>Gear Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Gold</td>
            <td>@Model.TotalStrength</td>
            <td>@Model.TotalIntelligence</td>
            <td>@Model.TotalAgility</td>
            <td>@Model.TotalGearValue Gold</td>
        </tr>
    </tbody>
</table>

<a asp-action="Buy" asp-controller="Inventory" asp-route-ninjaId="@Model.NinjaId" class="btn btn-success">Buy Equipment</a>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Equipment Name</th>
            <th>Gold Value</th>
            <th>Strength</th>
            <th>Intelligence</th>
            <th>Agility</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in categories)
        {
            var equipment = Model.Inventory?.FirstOrDefault(i => i.Equipment?.Category == category)?.Equipment;

            <tr>
                <th>@category</th>
                @if (equipment != null)
                {
                    <td>@equipment.Name</td>
                    <td>@equipment.GoldValue</td>
                    <td>@equipment.Strength</td>
                    <td>@equipment.Intelligence</td>
                    <td>@equipment.Agility</td>
                    <td>
                        <form asp-action="Sell" asp-controller="Inventory" method="post" style="display:inline">
                            <input type="hidden" name="ninjaId" value="@Model.NinjaId" />
                            <input type="hidden" name="equipmentId" value="@equipment.EquipmentId" />
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to sell @equipment.Name?')">
                                Sell
                            </button>
                        </form>
                    </td>
                } else
                {
                    <td colspan="6"><em>No equipment in this slot</em></td>
                }
            </tr>
        }
    </tbody>
</table>
